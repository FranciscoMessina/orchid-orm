{
  "name": "pqb",
  "version": "0.5.1",
  "description": "Postgres query builder",
  "homepage": "https://porm.netlify.app/guide/query-builder.html",
  "repository": {
    "type": "git",
    "url": "https://github.com/romeerez/porm/tree/main/packages/pqb"
  },
  "main": "dist/index.js",
  "module": "dist/index.esm.js",
  "typings": "dist/index.d.ts",
  "exports": {
    ".": {
      "require": "./dist/index.js",
      "import": "./dist/index.esm.js",
      "types": "./dist/index.d.ts"
    }
  },
  "scripts": {
    "test": "jest",
    "build": "rimraf ./dist/ && rollup -c --rollup.config",
    "prepublishOnly": "pnpm build"
  },
  "jest": {
    "setupFiles": [
      "dotenv/config"
    ],
    "globalSetup": "../../jest-global-setup.ts",
    "setupFilesAfterEnv": [
      "../../jest-setup.ts"
    ],
    "transform": {
      "^.+\\.ts$": "@swc/jest"
    }
  },
  "keywords": [
    "pg",
    "postgres",
    "query-builder"
  ],
  "author": "Roman Kushyn",
  "license": "ISC",
  "dependencies": {},
  "devDependencies": {
    "rollup": "^2.79.0",
    "rollup-plugin-dts": "^4.2.2",
    "rollup-plugin-esbuild": "^4.10.1",
    "esbuild": "^0.15.10",
    "@swc/core": "^1.2.210",
    "@swc/jest": "^0.2.21",
    "@types/jest": "^28.1.2",
    "@types/node": "^18.0.1",
    "@types/pg": "^8.6.5",
    "dotenv": "^16.0.1",
    "jest": "^28.1.2",
    "pg": "^8.7.3",
    "pg-transactional-tests": "^1.0.5",
    "rimraf": "^3.0.2",
    "tslib": "^2.4.0",
    "typescript": "^4.7.4"
  }
}
